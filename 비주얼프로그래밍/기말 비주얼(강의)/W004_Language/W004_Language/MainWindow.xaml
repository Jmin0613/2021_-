<Window x:Class="W004_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W004_Language"
        mc:Ignorable="d"
        Title="Language Prefered" Height="260" Width="300">
    <StackPanel Margin="20">
        <TextBlock Padding="0,5,0,10" HorizontalAlignment="Center"
                   Text="좋아하는 프로그래밍 언어를 선택하세요!"/>
        <Separator Background="LightSteelBlue"/>
        <CheckBox x:Name="cbC" Margin="30,5,0,0" Content="C"/>
        <CheckBox x:Name="cbCPP" Margin="30,5,0,0" Content="C++"/>
        <CheckBox x:Name="cbCS" Margin="30,5,0,0" Content="C#"/>
        <CheckBox x:Name="cbPy" Margin="30,5,0,0" Content="Python"/>
        <CheckBox x:Name="cbJava" Margin="30,5,0,10" Content="Java"/>
        <Separator Background="LightSteelBlue"/>
        <StackPanel Margin="5,10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnSubmit" Content="투표하기" Margin="0,0,20,0" Width="80"
                    Click="btnSubmit_Click"/>
            <Button x:Name="btnQuit" Content="끝내기" Width="80"
                    Click="btnQuit_Click"/>
        </StackPanel>
    </StackPanel>
</Window>