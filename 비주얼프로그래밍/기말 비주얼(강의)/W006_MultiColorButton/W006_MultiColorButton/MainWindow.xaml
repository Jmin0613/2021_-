<Window x:Class="W006_MultiColorButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W006_MultiColorButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid Background="Orange">
        <Button Margin="30" FontSize="30" FontWeight="Black">
            <Button.Content>
                <WrapPanel>
                    <TextBlock Foreground="Blue" Text="Multi"/>
                    <TextBlock Foreground="Red" Text="Color"/>
                    <TextBlock Foreground="Green" Text="Button"/>
                </WrapPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
